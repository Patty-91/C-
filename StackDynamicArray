void menu() {

	char name[20];
	

	cout << "Please enter your name" << endl;
	cin >> name;

	cout << "Welcome " << name << endl;
	cout << "************MENU**********" << endl;
	cout << "Please select an option" << endl;
	cout << "*********************************" << endl;
	cout << "0-Initialize your stack" << endl;
	cout << "1-Push a value in the stack" << endl;
	cout << "2-Pop a value from the satck" << endl;
	cout << "3-Pint stack" << endl;
	cout << "4-Exit the program" << endl;
	
	int option{};

	cin >> option;
	

	switch (option)
	{
	case 1:

		init();
		break;


	default:
		break;
	}

}

