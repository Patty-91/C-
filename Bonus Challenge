void swap( int * first, int * second) {
	
	/*int *first{};
	first = new int(fi);

	int *second{};
	second = new int(sec);
*/
	int temp;
	temp = *first;
	*first = *second;
	*second = temp;



}

void volume_sphere(int *rad) {

	float vol{}, pi = {3.1416};

	vol = (4 * pi*(*rad)*(*rad)*(*rad) / 3);

	cout << "the volume is " << vol << endl;
}
